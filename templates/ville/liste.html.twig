{% extends 'base.html.twig' %}

{% block body %}
<div class=" col-8 mx-auto">
    <h2 class="text-center my-4">GÃ©rer les villes</h2>

    <div>
        <h3>Filtrer les villes</h3>
        {{ form_start(formRecherche) }}
        <div class="row my-3">
            {{ form_label(formRecherche.nom, '', {'label_attr': {'class': 'col-2 col-form-label'}}) }}
            <div class="col-3">
                {{ form_widget(formRecherche.nom, {'attr' : {'class':'form-control'}}) }}
            </div>

            <button class="btn btn-outline-primary col-2">Rechercher</button>
            <a href="{{ path('ville_liste') }}" class="btn btn-outline-danger col-1 mx-2">X</a>
        </div>

        {{ form_end(formRecherche) }}
    </div>

    <table class="table table-striped table-bordered caption-top border">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Ville</th>
                <th scope="col">Code postal</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for ville in villes %}
                <tr>
                    <td>{{ ville.nom }}</td>
                    <td>{{ ville.codePostal }}</td>
                    <td>
                        <a href="#" class="btn btn-link btn-sm">Modifier</a>
                        <a href="{{ path('ville_supprimer', {'id': ville.id}) }}" class="btn btn-link btn-sm">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            <tr>
                {{ form_start(formVille) }}
                <td>{{ form_widget(formVille.nom, {'attr' : {'placeholder': 'ville', 'class':'form-control'}}) }}</td>
                <td>{{ form_widget(formVille.codePostal, {'attr' : {'placeholder': 'code postal', 'class':'form-control'}}) }}</td>
                <td><button class="btn btn-link">Ajouter</button></td>
                {{ form_end(formVille) }}
            </tr>
        </tbody>
    </table>
</div>
{% endblock %}

