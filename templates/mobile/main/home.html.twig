{% extends 'mobile/base.html.twig' %}

{% block body %}
    <div>
        <h1>Mes sorties : </h1>
        <div>
            <table class="table table-striped table-bordered caption-top border table-scroll">
                <thead class="bg-dark text-white">
                <tr>
                    <th scope="col">Nom de la sortie</th>
                    <th scope="col">Date de la sortie</th>
                    <th scope="col">Lieu</th>
                </tr>
                </thead>
                <tbody>
                    {% for sortie in app.user.sorties %}
                        <tr>
                            <td><a href="{{ path('sortie_detail',{'id': sortie.id}) }} " class="btn btn-link btn-sm p-0">{{ sortie.nom }}</a></td>
                            <td>{{ sortie.dateHeureDebut |date("d/m/Y  Ã  H:i") }}</td>
                            <td>{{ sortie.lieu.nom }}</td>
                        </tr>
                    {% endfor %}

                </tbody>
            </table>
        </div>
    </div>

{% endblock %}

{% block title %}
    Accueil | {{ parent() }}
{% endblock %}